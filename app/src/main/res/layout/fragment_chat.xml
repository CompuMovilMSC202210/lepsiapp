<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    tools:context=".ui.chat.ChatFragment">

    <LinearLayout
        android:id="@+id/chat_lin_encb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="290sp"
            android:layout_height="80sp"
            android:background="@color/white"
            android:src="@drawable/contacto" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_lec"

            android:layout_width="match_parent"
            android:layout_height="577dp"
            android:layout_weight="1"
            android:padding="30dp"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/pie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_lin_encb"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/chat_ing"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Escribe un mensaje" />

        <Button
            android:id="@+id/chat_bot_env"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:hint="Enviar"
            android:padding="5dp"
            android:textColor="@color/white" />
    </LinearLayout>


</RelativeLayout>