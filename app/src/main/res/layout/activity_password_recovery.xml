<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#A63F82"
    tools:context=".PasswordRecovery">


    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="406dp"
        android:layout_height="280dp"
        android:adjustViewBounds="false"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/emailUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logolepsiapp" />


    <EditText
        android:id="@+id/emailUser"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_marginTop="68dp"
        android:background="#F5F0F6"
        android:hint="@string/user"
        android:textAlignment="center"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:background="@drawable/round_edges"
        app:backgroundTint="@null"
        android:text="Reestablecer contrase침a"
        android:textColor="@color/ocre_claro"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/emailUser"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_reset"
        android:textColor="@color/gris_claro"
        android:text="Al presionar el bot칩n recibir치s un email con las instrucciones para recuperar tu contrase침a."
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>





