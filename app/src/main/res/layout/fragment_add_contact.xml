<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_claro"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"

    tools:context=".activity.RegistroContact">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="137dp"
        android:layout_height="113dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"

        android:src="@drawable/ic_contacts"
        app:tint="@color/purpura_medio" />

    <TextView
        android:id="@+id/lbltlt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto"
        android:text="@string/Add_or_Edit"
        android:textColor="@color/purpura_oscuro"
        android:textAlignment="center"
        android:textSize="18sp" />

        <TextView
            android:id="@+id/lblContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbltlt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/roboto"
            android:text="@string/user_name"
            android:textSize="18sp" />

    <TextView
        android:id="@+id/lblContactId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblContactName"
       android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="@string/user_id"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lblContactEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblContactId"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="@string/prompt_email"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/lblContactPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblContactEmail"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="@string/user_phone"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbltlt"
        android:layout_marginStart="100dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/roboto"
        android:background="@color/gris_oscuro"
        android:ems="80" />

        <EditText
            android:id="@+id/txtContactID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtContactName"
            android:fontFamily="@font/roboto"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:background="@color/gris_oscuro"
            android:ems="80" />

    <EditText
        android:id="@+id/txtContactEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtContactID"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:background="@color/gris_oscuro"
        android:ems="80" />

    <EditText
        android:id="@+id/txtContactPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtContactEmail"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:background="@color/gris_oscuro"
        android:ems="80" />


    <Button
        android:id="@+id/btnContacRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/round_edges"
        android:text="@string/action_register"
        android:textColor="@color/ocre_claro"
        android:textSize="22sp"
        app:backgroundTint="@null"
         />





</RelativeLayout>