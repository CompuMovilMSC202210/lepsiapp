<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddContactFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="137dp"
            android:layout_height="113dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="90dp"
            android:src="@drawable/contact" />

        <TextView
            android:id="@+id/lbltlt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:textAlignment="center"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:text="    AÃ±adir o Editar Contacto"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbltlt"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="35dp"
            android:text="Nombres:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblContactId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblContactName"
            android:layout_marginTop="18dp"
            android:text="ID:"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/lblContactPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblContactId"
            android:layout_marginTop="20dp"
            android:text="@string/user_phone"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbltlt"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="35dp"
            android:background="#ACA0AF"
            android:ems="80" />

        <EditText
            android:id="@+id/txtContactID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtContactName"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:background="#ACA0AF"
            android:ems="80" />

        <EditText
            android:id="@+id/txtContactPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtContactID"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:background="#ACA0AF"
            android:ems="80" />


        <Button
            android:id="@+id/btnRegister"
            android:background="@drawable/round_edges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtContactPhone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:text="@string/action_register" />


    </RelativeLayout>


</FrameLayout>