<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:background="@color/gris_claro"
    tools:context=".ui.notifications.NotificationsFragment">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="127dp"
        android:layout_height="139dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/Select_device"
        android:src="@drawable/ic_smartwatch_purple"
        app:tint="@color/purpura_medio"/>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView3"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:text="@string/Select_device"
        android:textColor="@color/purpura_oscuro"
        android:fontFamily="@font/roboto"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/imageView9"
        android:layout_width="318dp"
        android:layout_height="229dp"
        android:layout_below="@id/textView2"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/gris_oscuro"
        android:contentDescription="@string/Select_device_1" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/round_edges"
        android:text="@string/action_save"
        android:textColor="@color/ocre_claro"
        android:textSize="22sp"
        app:backgroundTint="@null" />

</RelativeLayout>