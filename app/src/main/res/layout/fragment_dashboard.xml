<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">


    <Button
        android:id="@+id/ct_bot_1"
        android:layout_width="257dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="92dp"
        android:background="@drawable/bot_redon"
        android:text="@string/texto_cont1"
        android:textColor="@color/yellowc"
        android:textSize="24sp" />

    <Button
        android:id="@+id/ct_bot_2"
        android:layout_width="257dp"
        android:layout_height="100dp"
        android:layout_below="@+id/ct_bot_1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="92dp"
        android:background="@drawable/bot_redon"
        android:text="@string/texto_cont2"
        android:textColor="@color/yellowc"
        android:textSize="24sp" />
    <Button
        android:id="@+id/ct_bot_3"
        android:layout_width="257dp"
        android:layout_height="100dp"
        android:layout_below="@+id/ct_bot_2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="92dp"
        android:background="@drawable/bot_redon"
        android:text="@string/texto_cont3"
        android:textColor="@color/yellowc"
        android:textSize="24sp" />
</RelativeLayout>


